generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model user_whatsapp {
  whatsID  BigInt   @id @default(autoincrement())
  msg_id   String   @unique
  in_out   String
  sender   String?
  receiver String?
  message  String?
  attachment_path   String?
  attachment_type  String?
  edate    DateTime @default(now())
}

model User {
  userID      BigInt    @id @default(autoincrement()) @db.BigInt
  whatsapp    BigInt    @db.BigInt
  name        String    @db.VarChar
  pas         String    @db.VarChar
  veridytpe   String    @db.Char(1)
  verID       String    @db.VarChar
  mobile      BigInt    @db.BigInt
  email       String    @db.VarChar
  pic_url     String    @db.VarChar
  gender      String    @db.Char(1)
  dob         DateTime  @db.Date
  langID      Int[]     @db.SmallInt
  placeID     Int       @db.Integer
  refercode   String    @db.VarChar
  referby     BigInt    @db.BigInt
  advisor     BigInt    @db.BigInt
  active      Boolean   @default(true)
  deactive    String?   @db.VarChar
  deleted     Boolean   @default(false)
  euserID     BigInt    @db.BigInt
  edate       DateTime  @db.Timestamptz(3)

  @@map("users")
}